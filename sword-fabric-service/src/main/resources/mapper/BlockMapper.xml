<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.kkgy333.sword.fabric.server.dao.mapper.BlockMapper">

    <select id="countTx" resultType="java.lang.Integer">
		select sum(tx_count) from block
	</select>
    <select id="countRWSet" resultType="java.lang.Integer">
        select sum(r_w_set_count) from block
    </select>
    <select id="countTxByDate" resultType="java.lang.Integer">
        select sum(tx_count) from block where calculate_date=#{calculateDate}
    </select>
    <select id="countByDate" resultType="java.lang.Integer">
        select count(id) from block where calculate_date=#{calculateDate}
    </select>
    <select id="countByChannelIdAndDate" resultType="java.lang.Integer">
        select count(id) from block where channel_id=#{channelId} and calculate_date=#{calculateDate}
    </select>
    <select id="countByChannelId" resultType="java.lang.Integer">
        select count(id) from block where channel_id=#{channelId}
    </select>
    <select id="countTxByChannelId" resultType="java.lang.Integer">
        select sum(tx_count) from block where channel_id=#{channelId}
    </select>

</mapper>